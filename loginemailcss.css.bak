.emailbackgroundimage{
	position:absolute;
	top:0px;
	left:0px;
	width:100%;
	height:100%;
	z-index:-2;
}
.emailmainpage{
	border:4px solid black;
	border-radius:20px;
	width:500px;
	height:500px;
	margin:0 auto;
	margin-top:60px;
	box-shadow:10px 10px 10px grey;
	background-image:linear-gradient(to right,pink,white,pink);
}
.emailimage{
	margin-left:85px;
	padding-top:10px;
}
.emailicon{
	outline:50%;
}
.emailinputbox{
	width:435px;
	margin-left:20px;
	height:100px;
	border:2px solid black;
	border-radius:20px;
	font-size:30px;
	margin-top:30px;
	padding-left:20px;
}
.emailinputbox:hover{
	background-image:linear-gradient(to right,aqua,white,aqua);
}
.emailsendotp{
	margin:40px;
}
.emailotp{
	width:200px;
	height:50px;
	margin-left:110px;
	background-color:red;
	color:yellow;
	border:2px solid black;
	border-radius:20px;
	font-size:20px;
}
.emailotp:hover{
	background-color:blue;
	color:white;
}
				    var t="Valid till tomorrow!!";
					document.getElementsByClassName("java3")[0].innerHTML=t;
					document.getElementsByClassName("java3")[0].style.color="purple";
				}
				</script>
				
				
			</div>
			<div class="box2">
			    <div class="boxoffer1">
				    <div class="discountimage">
					    <img src="discount2.png" height="350" width="350" class="couponimage2">
					</div>
					<div class="discountoffer">
					    Get flat 40% off on ordering <b class="food">Chole Bhature</b> by today!!!
					</div>
				</div>
				<div class="boxoffer2" onmouseover="mehak()" onmouseout="mehak1()">
				    <b>*Coupon getting expired by today!</b>
